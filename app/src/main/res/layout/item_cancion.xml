<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemCancion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    tools:context=".MusicaActivity">

    <ImageView
        android:id="@+id/imagenCancion"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tituloCancion"
        android:layout_width="180dp"
        android:layout_height="75dp"
        android:layout_toRightOf="@id/imagenCancion"
        android:text=""
        android:gravity="center_vertical"
        android:layout_marginLeft="9dp"/>

    <ImageButton
        android:id="@+id/botonCancion"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:src="@drawable/boton_play_musica"
        android:scaleType="fitXY"
        android:layout_toRightOf="@+id/tituloCancion"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:onClick="seleccionarCancion" />

</RelativeLayout>